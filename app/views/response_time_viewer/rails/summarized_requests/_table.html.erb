<table border='1'>
  <thead>
    <tr>
      <th>path</th>
      <th>summarized_at</th>
      <th>view_ms</th>
      <th>activerecord_ms</th>
      <th>solr_ms</th>
      <th>total_ms</th>
      <th>device</th>
      <th>merged_count</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>平均値</th>
      <th>-</th>
      <% if @search_object.show_agv == '1' %>
        <th><%= summarized_requests.average(:view_ms).to_i %></th>
        <th><%= summarized_requests.average(:ar_ms).to_i %></th>
        <th><%= summarized_requests.average(:solr_ms).to_i %></th>
        <th><%= summarized_requests.average(:total_ms).to_i %></th>
      <% else %>
        <th colspan=4></th>
      <% end %>
      <th>-</th>
      <th>-</th>
    </tr>
    <%- summarized_requests.each do |summarized_request| %>
      <tr>
        <td><%= summarized_request.path_with_params[0..40] %></td>
        <td><%= summarized_request.summarized_at.strftime("%Y年%m月%d日 %H時%M分")  %></td>
        <td><%= summarized_request.view_ms %></td>
        <td><%= summarized_request.ar_ms %></td>
        <td><%= summarized_request.solr_ms %></td>
        <td><%= summarized_request.total_ms %></td>
        <td><%= summarized_request.device %></td>
        <td><%= summarized_request.merged_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
